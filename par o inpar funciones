#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
bool num_par(int a);

void main()
{
	int numero;
	bool z;
	cout<< "Ingrese un numero";
	cin>> numero;
	z=num_par(numero);
	if (z)
		cout<<"es par";
	else
		cout<<"es impar";
	getch();
}
bool num_par (int a)
{ if (a%2==0)
	return true;
else
	return false;
}
